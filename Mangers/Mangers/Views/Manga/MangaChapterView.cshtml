                    <svg class="layout-header-icon-svg" viewBox="0 0 24 24">
                        <path d="M12 22c1.1 0 2-.9 2-2h-4c0 1.1.89 2 2 2zm6-6v-5c0-3.07-1.64-5.64-4.5-6.32V4c0-.83-.67-1.5-1.5-1.5s-1.5.67-1.5 1.5v.68C7.63 5.36 6 7.92 6 11v5l-2 2v1h16v-1l-2-2z"></path>
                    </svg>
                </a>
                <div class="dropdown">
                    <button onclick="myFunction()" class="layout-header-content-buttons dropbtn">
                        <a class="layout-header-content-buttons-avatar">
                            <img src="Assets/img/profile1.jpg">
                        </a>
                    </button>
                    <div id="myDropdown" class="dropdown-content">
                        <a href="#">ByMyKolaps</a>
                        <a href="#">Баланс</a>
                        <a href="#">Выйти</a>
                    </div>
                </div>
            </div>
        </header>

        <div class="c87">
            <div class="c89">
                @if (Model.MangaChapters != null && Model.MangaChapters.Count != 0)
                {
                    @foreach (var image in Model.ChapterPages)
                    {
                        <div class="c90">
                            <img class="c300" src="@image.ImageUrl">
                        </div>
                    }
                    <div class="c94">
                        <div class="c95">
                            @if (Model.currentChapterNumber != 1)
                            {
                                <a asp-controller="Manga" asp-action="MangaChapterView" asp-route-mangaId="@Model.MangaId" asp-route-curentChapterNumber="@(Model.currentChapterNumber-1)" asp-route-user="@User.Identity.Name">
                                    <button class="MuiButton-root c113">
                                    <svg class="layout-header-icon-svg" viewBox="0 0 24 24">
                                        <path d="M14 7l-5 5 5 5V7z"></path>
                                    </svg>
                                    Назад
                                    </button>
                                </a>
                            }
                            <a asp-controller="Manga" asp-action="MangaMainInfo" asp-route-mangaId="@Model.MangaId" class="MuiButton-root c113">К тайтлу</a>
                            @if (Model.currentChapterNumber != Model.MangaChapters.Count)
                            {
                                <a asp-controller="Manga" asp-action="MangaChapterView" asp-route-mangaId="@Model.MangaId" asp-route-curentChapterNumber="@(Model.currentChapterNumber+1)" asp-route-user="@User.Identity.Name">
                                    <button class="MuiButton-root c113">
                                    Вперед
                                    <svg class="layout-header-icon-svg" viewBox="0 0 24 24">
                                        <path d="M10 17l5-5-5-5v10z"></path>
                                    </svg>
                                    </button>
                                </a>
                            }
                        </div>
                    </div>
                }
                else
                {
                    <div class="c90">
                        <h1>Первая глава скоро выйдет, ожидайте!</h1>
                    </div>
                }
            </div>
        </div>
