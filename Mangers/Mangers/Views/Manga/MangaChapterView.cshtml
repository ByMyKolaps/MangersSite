                    </a>
                    <a asp-controller="Manga" asp-action="MangaMainInfo" asp-route-mangaId="@Model.MangaId" class="main-container-header-left-mangaTitle">
                        @Model.MangaTitle
                    </a>
                    <div class="main-container-header-left-chaptersNav">
                        @if (Model.currentChapterNumber != 1)
                        {
                            <a asp-controller="Manga" asp-action="MangaChapterView" asp-route-mangaId="@Model.MangaId" asp-route-curentChapterNumber="@(Model.currentChapterNumber-1)" asp-route-user="@User.Identity.Name">
                                <button>
                                    <svg class="layout-header-icon-svg" viewBox="0 0 24 24">
                                        <path d="M14 7l-5 5 5 5V7z"></path>
                                    </svg>
                                </button>
                            </a>
                        }
                        <span>
                            <button>
                                @Model.currentChapterNumber
                            </button>
                        </span>
                        @if (Model.currentChapterNumber != Model.MangaChapters.Count)
                        {
                            <a asp-controller="Manga" asp-action="MangaChapterView" asp-route-mangaId="@Model.MangaId" asp-route-curentChapterNumber="@(Model.currentChapterNumber+1)" asp-route-user="@User.Identity.Name">
                                <button>
                                    <svg class="layout-header-icon-svg" viewBox="0 0 24 24">
                                        <path d="M10 17l5-5-5-5v10z"></path>
                                    </svg>
                                </button>
                            </a>
                        }
                    </div>
                </div>
                <div class="main-container-header-mangaBookmark1">
                    <div class="main-container-header-mangaBookmark2">
                        <div class="main-container-header-mangaBookmark3">
                            <div class="main-container-header-mangaBookmark4">
