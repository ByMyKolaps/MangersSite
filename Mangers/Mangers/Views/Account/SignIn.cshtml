@using Mangers.ViewModels
@model SignInViewModel
@{ 
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SignIn</title>
    <link rel="stylesheet" type="text/css" href="/css/signInUp.css">
</head>
<body>
    <div class="wrapper">
        <div class="signInUp-form">
            <div class="signIn-form-topBlock">
                <h5>Войти в аккаунт</h5>
                <div class="signIn-form-topBlock-socials">
                    <form method="post" asp-action="ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl">
                        <button type="submit" name="provider" value="Google" class="signIn-form-topBlock-socials-item">
                            <svg height="2em" viewBox="0 0 24 24" width="2em" fill="white">
                                <path d="m21.823 9h-2.187v2.177h-2.177v2.187h2.177v2.177h2.187v-2.177h2.177v-2.187h-2.177z" />
                                <path d="m7.5 19.5c4.328 0 7.203-3.038 7.203-7.326 0-.491-.051-.87-.122-1.248h-7.08v2.578h4.257c-.174 1.095-1.289 3.233-4.257 3.233-2.557 0-4.645-2.118-4.645-4.737s2.087-4.738 4.645-4.738c1.463 0 2.435.624 2.988 1.156l2.036-1.954c-1.311-1.227-2.999-1.964-5.025-1.964-4.144 0-7.5 3.356-7.5 7.5s3.356 7.5 7.5 7.5z" />
                            </svg>
                            <br>
                            <span style="font-size: 10px">Google</span>
                        </button>
                    </form>
                </div>
            </div>
            <div class="signIn-form-bottomBlock">
                <form method="post" asp-controller="Account" asp-action="SignIn">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="signIn-form-bottomBlock-input">
                        <input type="text" asp-for="UserName" placeholder="Ник">
                    </div>
                    <div class="signIn-form-bottomBlock-input">
                        <input type="password" asp-for="Password" placeholder="Пароль">
                    </div>
                    <p class="signIn-form-bottomBlock-redirect">
                        <a href="/Account/SignUp">Регистрация</a>
                    </p>
                    <button type="submit" class="signIn-form-bottomBlock-signIn">
                        Войти
                    </button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>